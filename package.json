{
  "name": "boreal-ui",
  "version": "1.0.0",
  "description": "A modern, customizable React/Next.js component library",
  "author": "Davin Chiupka",
  "license": "ISC",
  "main": "./dist/core/index.cjs.js",
  "module": "./dist/core/index.esm.js",
  "types": "./dist/types/index.core.d.ts",
  "type": "module",
  "files": [
    "dist",
    "dist/types",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build:core": "vite build --config vite.config.core.ts",
    "build:next": "vite build --config vite.config.next.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:core && npm run build:next && npm run build:types",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "lint:styles:fix": "stylelint '**/*.{css,scss}' --fix",
    "lint:fix": "eslint ./src --ext .ts,.tsx --fix",
    "check:sync": "node scripts/checkSync.js",
    "generate:component": "node scripts/generate-component.js",
    "generate:entrypoints": "node scripts/generateEntryPoints.cjs",
    "test": "jest",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "tsc -p tsconfig.build.json && npm run build",
    "playground": "vite --config playground/vite.config.ts",
    "storybook:core": "storybook dev -p 6006 -c .storybook-core",
    "storybook:next": "storybook dev -p 6007 -c .storybook-next",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "component-library",
    "nextjs",
    "scss",
    "ui",
    "boreal",
    "design-system"
  ],
  "sideEffects": false,
  "dependencies": {
    "modern-css-reset": "^1.4.0"
  },
  "peerDependencies": {
    "marked": ">=12.0.0",
    "next": ">=13.0.0",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "uuid": ">=9.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/nextjs": "^9.0.0",
    "@storybook/react-vite": "^9.0.0",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "axe-core": "^4.10.3",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "cypress": "^14.3.1",
    "cypress-real-events": "^1.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "sass": "^1.86.3",
    "sass-embedded": "^1.86.3",
    "sass-loader": "^16.0.5",
    "storybook": "^9.0.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.19.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-scss": "^6.11.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.18",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.1",
    "webpack": "^5.99.6",
    "webpack-cli": "^6.0.1"
  },
  "exports": {
    ".": {
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.cjs.js",
      "types": "./dist/types/index.core.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.cjs.js",
      "types": "./dist/types/index.core.d.ts"
    },
    "./next": {
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.cjs.js",
      "types": "./dist/types/index.next.d.ts"
    },
    "./next/style.css": "./dist/next/style.css",
    "./core/style.css": "./dist/core/style.css"
  },
  "typesVersions": {
    "*": {
      "core": [
        "dist/types/index.core.d.ts"
      ],
      "next": [
        "dist/types/index.next.d.ts"
      ],
      "*": [
        "dist/types/index.core.d.ts"
      ]
    }
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
