{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "composite": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src/index.core.ts",
    "src/index.next.ts",
    "src/components",
    "src/Icons",
    "src/context",
    "src/utils",
    "src/styles",
    "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "test",
    "cypress",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
