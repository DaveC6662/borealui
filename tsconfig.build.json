{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "test",
    "cypress",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
