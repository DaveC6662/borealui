{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "jsx": "react-jsx", 
      "lib": ["dom", "esnext"], 
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "emitDeclarationOnly": false,
      "removeComments": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "isolatedModules": false,
      "allowJs": false
    },
    "include": ["src/**/*"],
    "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test",
    "playground",
    "cypress"
  ]
  }
  