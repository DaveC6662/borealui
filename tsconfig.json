{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": [
      "node",
      "jest",
      "jest-axe",
      "@testing-library/jest-dom",
      "@testing-library/cypress"
    ],

    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "src",
    "scripts",
    "__tests__",
    "jest.setup.ts",
    "jest.config.ts",
    "global.d.ts",
    "next.config.mjs",
    ".storybook-core/types",
    "webpack.config.cjs"
  ],

  "exclude": ["node_modules", "cypress", "dist"]
}
